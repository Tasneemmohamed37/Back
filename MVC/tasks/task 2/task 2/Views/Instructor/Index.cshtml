@model List<Instructor>
@{
    ViewData["Title"] = "Instructor Home";
}
<h1>Instructors</h1>
<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Image</th>
        <th>Salary</th>
        <th>Address</th>
        <th>Dept_Id</th>
        <th>Crs_Id</th>
        <th></th>
    </tr>
    @foreach (Instructor item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><img src="~/Images/@item.Image" /></td>
            <td>@item.Salary</td>
            <td>@item.Address</td>
            <td>@item.Dept_Id</td>
            <td>@item.Crs_Id</td>
            <td><a href="/Instructor/Edit/@item.Id" class="btn btn-success">Edit</a></td>
        </tr>
    }
</table>
<a href="/Instructor/New" class="btn btn-success">Add Instructor</a>

