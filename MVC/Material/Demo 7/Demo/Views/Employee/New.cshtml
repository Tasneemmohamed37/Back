<form method="post" asp-action="New">
    <div asp-validation-summary="All" class="text-danger">

    </div>
    <div>
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input class="form-control" asp-for="Address"/>
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="ImageUrl"></label>
        <input class="form-control" asp-for="ImageUrl"/>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span asp-validation-for="Age" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="DeptId"></label>
        <select asp-for="DeptId" class="form-control"
                asp-items="deptOptios">
            <option value="0">--Select Department--</option>
        </select>
        <span asp-validation-for="DeptId" class="text-danger"></span>
    </div>
    
    <input type="submit" class="btn btn-danger" value="Create"/>
</form>

<a asp-action="Index" asp-controller="Employee">Back To List</a>
